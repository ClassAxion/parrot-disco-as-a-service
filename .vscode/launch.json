    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "./cmd/server",
            "cwd": "./"
        },
        {
            "name": "Connect to remote",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "host": "127.0.0.1",
            "port": 4040,
            "remotePath": "/usr/src/app",
            "cwd": "${workspaceRoot}/src-go"
        }
    ]
}
